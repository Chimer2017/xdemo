extends layout
include mixins/filterOption.pug
include mixins/filterSection.pug
include mixins/tableRow.pug
include mixins/dropDown.pug
include mixins/search.pug


block content
  #wrapper

    //Banner for the app
    #banner
      div(class="jumbotron" id='banner')
        div(id='banner-layer')
          h1(class="display-4") XDemo
          p(class="lead") Stream Your Favorite Shows Here!
          hr(class="my-4")
          a(class="btn btn-primary btn-lg" href="#" role="button" id="search-btn") Search For Shows Now
    
    //Filter Box

    #filter
      +filterSection("Displaying: 20",'display-num',[10,20,50,100])
      +filterSection("Rating:", "rating",['P','PG','PG-13','R','NC-17'])
      +filterSection("Genre:", "genre",['Romantic Comedy','Action','Thriller','Horror','Comedy','Drama','Sci-Fi','Music Video','Martial Arts','Animation','Fantasy'])
      +filterSection("Studio:", "studio",[])
      +filterSection("Producer:", "producer",[])
      +filterSection("Year:", "year",[])

    #prodInfo
      div(class="card" style="width: 18rem;")
        //- img src="..." class="card-img-top" alt="..."
        h2 Movie Information
        div(class="card-body")
          p
            strong Title:
            |  <span id='prodInfoTitle' class="card-title"></span>
            br
            strong Release Date:
            |  <span id='prodInfoYear' class="card-title"></span>
            br
            strong Producer(s):
            |  <span id='prodInfoProducer' class="card-text"></span>
            br
            strong Genre:
            |  <span id='prodInfoGenre' class="card-text"></span>
            br
            strong Rating:
            |  <span id='prodInfoRating' class="card-text"></span>
            br
            strong Description:
            |  <span id='prodInfoDesc' class="card-text"></span>
    #prodList
      table
        +search
        thead
          th(id="title") Title
          th(id="producer") Producer
          th(id="genre") Genre
          th(id="rating") Rating
        tbody
          - for (var i = 0; i < prodList.length; i++) {
              +tableRow(prodList[i]['title'],prodList[i]['producer'],prodList[i]['genre'],prodList[i]['rating'],prodList[i]['id'])
          -  } 